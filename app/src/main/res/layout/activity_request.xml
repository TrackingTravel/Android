<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRequest">

    <TextView
        android:id="@+id/requestCameraPermissionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Обоснование запроса на геопозиционирование"
        android:gravity="center"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/requestGeoPermissionButton"/>

    <Button
        android:id="@+id/requestGeoPermissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разрешить геопозиционирование"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requestCameraPermissionTextView"
        app:layout_constraintBottom_toTopOf="@id/requestAudioAndLocationPermissionTextView"/>

    <TextView
        android:id="@+id/requestAudioAndLocationPermissionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Можно и без геолокации, нажмите кнопочку К МАРШРУТАМ"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requestGeoPermissionButton"
        app:layout_constraintBottom_toTopOf="@id/startButton"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="К маршрутам"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/requestAudioAndLocationPermissionTextView"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>