<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment">

    <LinearLayout
        android:id="@+id/ll_rd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".DetailsFragment">

        <android.widget.Button
            android:id="@+id/btn_detail_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/et_search"
            style="@style/et_route_details_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:paddingStart="2dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            android:text="Будет название" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_rd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager_2_detail"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_rd">

            </androidx.viewpager2.widget.ViewPager2>

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:padding="20dp"
                android:text="Здесь будет название маршрута"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="#F7F7F7">
                
                <TextView
                    android:id="@+id/tv_det_1"
                    android:layout_width="156dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/duration"
                    android:textSize="14sp"
                    android:textColor="#201A1B"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_det_2"/>

                <TextView
                    android:id="@+id/tv_det_2"
                    android:layout_width="124dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="11ч11м"
                    android:textSize="14sp"
                    android:textColor="#201A1B"
                    android:gravity="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_det_1"
                    app:layout_constraintEnd_toEndOf="parent"/>
                
                <View
                    android:id="@+id/tv_line_1"
                    android:layout_width="296dp"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_det_3"
                    android:layout_width="156dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/distanse"
                    android:textSize="14sp"
                    android:textColor="#201A1B"
                    app:layout_constraintTop_toTopOf="@id/tv_line_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_det_4"/>

                <TextView
                    android:id="@+id/tv_det_4"
                    android:layout_width="124dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="42км"
                    android:textSize="14sp"
                    android:textColor="#201A1B"
                    android:gravity="end"
                    app:layout_constraintTop_toTopOf="@id/tv_line_1"
                    app:layout_constraintStart_toEndOf="@id/tv_det_3"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/tv_line_2"
                    android:layout_width="296dp"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="48dp"
                    app:layout_constraintTop_toTopOf="@id/tv_line_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_det_5"
                    android:layout_width="156dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="@string/point"
                    android:textSize="14sp"
                    android:textColor="#201A1B"
                    app:layout_constraintTop_toTopOf="@id/tv_line_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_det_6"/>

                <TextView
                    android:id="@+id/tv_det_6"
                    android:layout_width="124dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="2552м"
                    android:textSize="14sp"
                    android:textColor="#201A1B"
                    android:gravity="end"
                    app:layout_constraintTop_toTopOf="@id/tv_line_2"
                    app:layout_constraintStart_toEndOf="@id/tv_det_5"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_det_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/description"
                android:maxLines="4"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/tv_det_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_det_show_desc"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:text="@string/show_description"
                app:layout_constraintTop_toBottomOf="@id/tv_det_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/request_photo"
                app:layout_constraintTop_toBottomOf="@id/tv_det_show_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBtn"
        style="@style/Button_Start"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:stateListAnimator="@null"
        android:text="@string/open_map"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_route_fragment" />

</androidx.constraintlayout.widget.ConstraintLayout>