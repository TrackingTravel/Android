<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="cardCornerRadius">180dp</item>
    </style>

    <style name="Image_Start">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">550dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button_Start">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">72dp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Button_Allow">
        <item name="android:layout_width">164dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">72dp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Button_Ignore">
        <item name="android:layout_width">164dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">72dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="et_route_details_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="searchViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="RouteFragmentRouteStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="searchIcon">@drawable/ic_baseline_search_24</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@mipmap/ic_launcher</item>
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>




